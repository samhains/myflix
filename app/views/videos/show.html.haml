%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        %img(src="/tmp/monk_large.jpg")
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Average Rating: #{average_rating(@video)}
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      =bootstrap_form_for @review, url: reviews_path do |f| 
        =f.text_area :description, label: "Rate this video"
        =f.select :rating, [['5 Stars', 5],['4 Stars', 4],['3 Stars', 3],['2 Stars', 2],['1 Stars', 1]]
        =f.submit "Submit"
      %header
        %h3 User Reviews  (#{@video.reviews.count})
      %ul
        - @video.reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.creator.name}</a>
              .col-sm-8
                %p #{review.description}
