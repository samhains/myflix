%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", root_path
  -if logged_in?
    %ul.col-md-4.clearfix
      %li= link_to "Videos"
      %li= link_to "My Queue"
      %li= link_to "People"
    =form_tag(search_videos_path, method:'GET', class: "col-md-5 navbar-form form-group") do
      =text_field_tag 'title', nil, class: 'form-control', placeholder: "Search for videos here"
      =submit_tag "search", class: 'btn btn-default'
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            %span Welcome, #{current_user.name} 
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              =link_to "Account"
              =link_to "Plan and Billing"
              =link_to "Sign Out", logout_path
